<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="16dp">

    <!-- Title banner -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B71C1C"
        android:text="âš  SCAM DETECTED"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <!-- Content card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caller:"
            android:textColor="#9E9E9E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+60123456789"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason:"
            android:textColor="#9E9E9E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impersonating LHDN officer demanding payment"
            android:textColor="#EF9A9A"
            android:textSize="13sp"
            android:layout_marginBottom="12dp" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btn_end_call"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#C62828"
                android:text="END CALL"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_call_pdrm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#1565C0"
                android:text="CALL PDRM"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_dismiss"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#424242"
                android:text="DISMISS"
                android:textColor="#BDBDBD"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

    </LinearLayout>

</LinearLayout>
